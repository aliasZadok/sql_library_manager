extends layout

block content
  h1= title
  span
    p
      a.button(href='/books/new') Create New Book
    form(action='/books/search' method='GET')
      input(type='search' name='term' placeholder='Search...')
      input(type='submit' value= `üîç`)
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
    each book in books
      tr
        td
          a(href='/books/' + book.id)= book.title
        td= book.author
        td= book.genre
        td= book.year
  span.pagination
    - let i = [];
      each book in bookCount 
       - i.push(book.id);
    - let pages = Math.ceil(i.length/10);
    - let page = 0;
      while page < pages
        a.button(href='/books/page/' + ( page ))=  page
        - page++
